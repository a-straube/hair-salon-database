<h1>Assign a stylist for <%= @client.name() %></h1>

<% if @stylists.any?() %>

  <form action="client/<%= @client.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
      <% @stylists.each do |stylist| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="stylist_id[]" value="<%= stylist.id() %>"><%= stylist.name() %>
          </label>
        </div>
      <% end %>
    <button type="submit">Add stylist</button>
  </form>

<% end %>
